{
  "extends": "airbnb",
  "rules": {
    "import/no-named-as-default": 0,
    "no-undef": "off",
    "semi": ["error", "never"],
    "comma-dangle": 0,
    "no-use-before-define": [
      "error",
      {
        "variables": false,
        "functions": false
      }
    ],
    "no-unused-vars": [
      "error",
      {
        "argsIgnorePattern": "^_"
      }
    ],
    "react/jsx-filename-extension": 0,
    "react/prop-types": 0,
    "jsx-a11y/anchor-is-valid": 0,
    "no-alert": 0,
    "no-restricted-globals": 0
  }
}
